    icon_position = left
    min_icon_size = 32
    max_icon_size = 48
    
    # Historial
    sticky_history = yes
    history_length = 20
    
    # Interacción con el ratón
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

